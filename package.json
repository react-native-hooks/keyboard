{
  "name": "@rnhooks/keyboard",
  "version": "1.0.0",
  "description": "React Native Hook for Keyboard",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "scripts": {
    "fix-lint": "yarn lint -- --fix",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "build": "bob build && yarn copy-dts",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" lib/typescript",
    "example": "yarn --cwd example",
    "prettier": "prettier \"**/*.{ts,tsx,js}\" --write",
    "bootstrap": "yarn install && yarn example",
    "prepare": "husky install",
    "yalc": "npm run build && yalc push",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react-native",
    "hooks",
    "react-native-hooks",
    "react-native-hooks-keyboard"
  ],
  "author": {
    "name": "Pritish Vaidya",
    "email": "pritishvaidya94@gmail.com",
    "url": "pritishvaidya.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-native-hooks/keyboard"
  },
  "bugs": {
    "url": "https://github.com/react-native-hooks/keyboard#issues"
  },
  "homepage": "https://github.com/react-native-hooks/keyboard#readme",
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^3.0.0",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.27",
    "@types/react-native": "^0.65.5",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^26.6.3",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^11.2.0",
    "metro-react-native-babel-preset": "^0.66.0",
    "prettier": "^2.4.1",
    "react": "17.0.2",
    "react-native": "0.65.1",
    "react-native-builder-bob": "^0.18.2",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/test/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
